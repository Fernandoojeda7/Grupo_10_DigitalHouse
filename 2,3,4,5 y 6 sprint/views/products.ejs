<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {title: 'Todos los productos'}) %>
<body class="main-index">
    <%- include('partials/header') %> 
    
    <main class="main-index">
        
        <h1>TODOS LOS PRODUCTOS</h1>
        <a href="/products/create"><button style="background-color: red; padding: 10px; margin-bottom: 30px; border-radius: 10px;;" type="submit">AGREGAR PRODUCTO</button></a>
        <div class="contenedor-por-seccion">
        <% productos.forEach(producto => { %>
                 <div class="contenedor">
                <a href="/products/productDetail/<%= producto.id %>" id="contenedor"><img src="/img/products/<%= producto.image %>"  alt=""></a>
                <h3><%= producto.name %></h3>
                <h4>$<%= producto.price %> ARS</h4>
                <h5><%= producto.discount %> % off</h5>
                <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST">
                <button style="background-color: red; font-size: 20px; margin-left: 15px;" type="submit">Eliminar</button>
                </form>
                <a href="/products/edit/<%= producto.id %>"><button style="background-color: green; font-size: 20px; margin: 5px 0; ">Editar</button></a>
            </div>
            <% }) %>
        </div>
    </main>
</body>
</html>